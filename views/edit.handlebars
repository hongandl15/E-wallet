<div>
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Cập nhật thông tin người dùng</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
          <!-- Modal body -->
          <form method="post" action="/update/{{username}}">
          <div class="modal-body">
                  <div class="form-group">
                      <label for="fullname">Họ tên</label>
                      <input value="{{fullname}}" class="form-control" type="text" placeholder="Nhập tên người dùng" id="fullname" name="fullname">
                  </div>
                  <div class="form-group">
                      <label for="username">User name</label>
                      <input value="{{username}}" class="form-control" type="text" placeholder="Nhập user name"  id="username" name="username">
                  </div>
                  <div class="form-group">
                      <label for="password">Password</label>
                      <input value="{{password}}" class="form-control" type="text" placeholder="Nhập Password" id="password" name="password">
                  </div>
                  <div class="alert alert-danger">
                      Vui lòng nhập đầy đủ thông tin
                  </div>
                  <div class="form-group">
                  <button class="btn btn-success mr-2">Cập nhật</button>
                  {{!-- <button type="button" class="btn btn-dark" data-dismiss="modal" >Đóng</button> --}}
                </div>
              </form>
          </div>
        
        <!-- Modal footer -->
          
      </div>
    </div>
  </div>