<div>
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Đăng nhập lần đầu vui lòng đổi mật khẩu</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
          <!-- Modal body -->
          <form method="post" action="/firstlogin">
          <div class="modal-body">
                  <div class="form-group">
                      <label for="password">Password</label>
                      <input class="form-control" type="password" placeholder="Nhập Password" id="password" name="password">
                  </div>
                  <div class="form-group">
                      <label for="passwordconfirm">Confirm Password</label>
                      <input class="form-control" type="password" placeholder="Nhập lại Password" id="passwordconfirm" name="passwordconfirm">
                  </div>
                  {{#if error}}
                  <div class="alert alert-danger">
                     {{error}}
                  </div>
                  {{/if}}
                  <div class="form-group">
                    <button class="btn btn-success mr-2">Đổi mật khẩu</button>
                  {{!-- <button type="button" class="btn btn-dark" data-dismiss="modal" >Đóng</button> --}}
                </div>
              </form>
          </div>
        
        <!-- Modal footer -->
          
      </div>
    </div>
  </div>