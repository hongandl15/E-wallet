    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-5 col-lg-4">
                <div class="card" class="w-100">
                    <img class="card-img-top" src="https://www.w3schools.com/bootstrap4/img_avatar1.png"
                        alt="Card image">
                    <div class="card-body">
                        <h4 class="card-title text-primary">{{user.fullname}}</h4>
                        <p class="card-text">User name: <strong>{{user.username}}</strong></p>
                        <p class="card-text">SĐT: <strong>{{user.phone}}</strong></p>
                        <p class="card-text">Địa chỉ: <strong>{{user.address}}</strong></p>
                        <p class="card-text">Ngày sinh: <strong>{{user.Birthdate}}</strong></p>
                        <p class="card-text">Số dư tài khoản: <strong id='money'>{{user.balance}}</strong></p>
                        <p class="card-text">Trạng thái: <strong>{{user.status}}</strong></p>

                        <button class="btn btn-success mr-2"><a href="/changepassword" style="color: white">Đổi mật khẩu</a></button>
                    </div>
                </div>
                <p class="mt-3"><a href="#" onclick="history.back()">Quay lại</a></p>
            </div>

            
                {{#if idcard}}
                <div class="col-sm-6 col-md-5 col-lg-4">
                    <form class="mt-3" role="form" enctype="multipart/form-data" action="/addID" method="post">
                        <div>
                            <img width="400px" height="300px" src='/photo/{{idcard.photofrontName}}.jpg' alt={{idcard.photofrontName}} />          
                        </div>
                        <div class="form-group">
                                <label for="photofront">Ảnh CMND mặt trước</label>
                                <input type="file" class="form-control"  accept="image/*" id="photofront" name="photofront">
                        </div>

                        <div>
                            <img width="400px" height="300px" src='/photo/{{idcard.photobackName}}.jpg' alt={{idcard.photobackName}} />          
                        </div>
    

                        <div class="form-group">
                            <label for="photoback">Ảnh CMND mặt sau</label>
                            <input type="file" class="form-control"  accept="image/*" id="photoback" name="photoback">
                        </div>
                        {{!-- <div class="alert alert-danger">
                            Vui lòng nhập đầy đủ thông tin
                        </div> --}}
                        <div class="form-group">
                            <button type="submit" class="btn btn-success mr-2">Bổ sung</button>
                        </div>
                    </form>
                </div>
                {{/if}}
        </div>
    </div>
