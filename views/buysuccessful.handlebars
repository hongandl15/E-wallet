<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-5 col-lg-4">
                <div class="card" class="w-100">
                    <h2>Mua thẻ thành công</h2>
                    <h6>Xem thông tin thẻ bên dưới</h6>
                
                    {{#each card}}
                    <div class="card-body">                   
                        <p class="card-text">Mã thẻ:<strong> {{cardcode}}</strong></p>
                        <p class="card-text">Mệnh giá:<strong> {{cardprice}}VNĐ</strong></p>
                    </div>
                    {{/each}}
                </div>
                <p class="mt-3"><a href="#" onclick="history.back()" >Mua tiếp</a></p>
                <p class="mt-3"><a href="/" >Quay lại trang chủ</a></p>
            </div>
        </div>
    </div>
</body>